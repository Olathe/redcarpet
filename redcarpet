TIME_BETWEEN_TRIES_IN_SECONDS = 15
SSID                          = 'RedCarpetInn'
ACCEPT_TERMS_URL              = 'http://192.168.17.1:3456/Login?ticket=Free'
OUTPUT_STATUS_MESSAGES        = true

require 'open3'
require 'open-uri'

def get_ssid
  begin
    # Handle Linux
    a = Open3.capture2e('iwconfig').first.scan(/ESSID:"(.+?)"/)
  rescue Errno::ENOENT
    begin
      # Handle Windows
      a = Open3.capture2e('netsh wlan show interfaces').first.scan(/ SSID\s+: (.+?)\n/)
    rescue
      # Handle failure
      a = []
    end
  end
  a.empty? ? nil : a.first.first
end

# Turn off output if requested
unless OUTPUT_STATUS_MESSAGES
  NULL = Object.new
  def NULL.write *args; end
  $stderr = $stdout = NULL
end

loop do
  print "[#{ Time.now }] "
  begin
    if get_ssid == SSID
      print "Accepting terms of service..."
      open(ACCEPT_TERMS_URL) do |f|
        puts((f.status.first == '200') ? "success" : "FAIL!")
      end
    else
      puts "Not connected to #{ SSID }"
    end
  rescue Exception => e
    $stderr.puts e.inspect
  end
  sleep TIME_BETWEEN_TRIES_IN_SECONDS
end
